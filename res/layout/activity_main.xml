	<ImageButton
	    android:id="@+id/onLiteBtn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentRight="true"
	    android:layout_marginBottom="54dp"
	    android:layout_marginRight="70dp"
	    android:background="@null"
	    android:contentDescription="@null"
	    android:src="@drawable/btn_lite_off" />

	<ImageButton
	    android:id="@+id/onBackBtn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/onLiteBtn"
	    android:layout_alignParentLeft="true"
	    android:layout_marginLeft="70dp"
	    android:background="@null"
	    android:contentDescription="@null"
	    android:src="@drawable/back_switch_on" />

	<ImageButton
	    android:id="@+id/onBtn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/onLiteBtn"
	    android:layout_centerHorizontal="true"
	    android:layout_marginBottom="130dp"
	    android:background="@null"
	    android:contentDescription="@null"
	    android:src="@drawable/btn_switch_off" />

	<ImageView
	    android:id="@+id/imageView1"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:visibility="gone"
	    android:background="@drawable/backl"/>

</RelativeLayout>